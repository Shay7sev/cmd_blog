---
export interface Props {
    imageSrc: string | ImageMetadata;
    rounded?: boolean;
    alt?: string;
    ratio?: number;
    widths?: number[];
}

import { Picture } from "@astrojs/image/components";
import type { ImageMetadata } from "@astrojs/image/dist/vite-plugin-astro-image";

const {
    rounded = true,
    imageSrc,
    alt = "",
    widths = [75, 150],
    ratio = 1,
} = Astro.props;
---

<Picture
    alt={alt}
    sizes="(max-width: 375px) 75px, 150px"
    src={imageSrc}
    class:list={{ rounded }}
    widths={widths}
    aspectRatio={ratio}
/>
