---
interface Props {
    page: Page;
}
import type { Page } from "astro";

import type { Frontmatter } from "../../utils/types/frontmatter";
import Card from "../../components/Card.astro";
import BaseLayout from "../../layouts/BaseLayout.astro";
import "../../styles/components/_sidebar.scss";

/* @ts-ignore */
export async function getStaticPaths({ paginate }) {
    const allPosts = await Astro.glob("./*.md");
    return paginate(allPosts, { pageSize: 5 });
}
const { page } = Astro.props;
const PageTitle = "Blog";
const desc = "liste des posts";
---

<BaseLayout title={PageTitle} description={desc}>
    <Fragment slot="main">
        {
            page.data.map(
                ({
                    frontmatter,
                    url,
                }: {
                    frontmatter: Frontmatter;
                    url: string;
                }) => (
                    <Card
                        title={frontmatter.title}
                        pubDate={frontmatter.pubDate}
                        description={frontmatter.description}
                        url={url}
                        image={frontmatter.image}
                        tags={frontmatter.tags}
                    />
                )
            )
        }
        <nav class="nav-paginate">
            <ul>
                {
                    page.url.prev ? (
                        <li class="btn">
                            <a href={page.url.prev}>Pr√©cedent</a>
                        </li>
                    ) : null
                }
                {
                    page.url.next ? (
                        <li class="btn">
                            <a href={page.url.next}>Suivant</a>
                        </li>
                    ) : null
                }
            <!-- <li>{page.lastPage}</li> -->
            </ul>
        </nav>
    </Fragment>
</BaseLayout>
